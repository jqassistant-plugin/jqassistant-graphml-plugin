        <jqa-java-plugin.version>2.0.0-RC2</jqa-java-plugin.version>
    </properties>

    <scm>
        <connection>scm:git:git@github.com:jqassistant/jqa-graphml-plugin.git</connection>
        <developerConnection>scm:git:git@github.com:jqassistant/jqa-graphml-plugin.git</developerConnection>
        <url>https://github.com/jqassistant/jqa-graphml-plugin</url>
